<launch>

    <!-- show the robot model in rviz -->
    <include file="$(find mira_picker)/launch/display.launch">
        <!-- turn on rviz, robot_state_publisher, etc. -->
        <arg name="gui"                 value="true"/>
        <arg name="rvizconfig"          value="$(find mira_picker)/rviz/urdf.rviz"/>
        <arg name="dentist_camera"      value="false"/>
        <arg name="gripper_name"        value="robotiq2f_140"/>
        <arg name="publish_joint_state" value="true"/>
        <arg name="publish_robot_state" value="true"/>
    </include>

    <!-- sync rviz node with bag playback clock -->
    <param name="/use_sim_time" value="true"/>

    <!-- publishes:
         - /edge_detector/rgb_edges (overlay for visualization)
         - /edge_points (3D edge point cloud)
    -->
    <node
        pkg="edge_detector_pkg2"
        type="edge_points_node.py"
        name="edge_points_node"
        output="screen" />

</launch>
